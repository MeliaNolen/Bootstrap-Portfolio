<!-- About me col -->
<div class="col-md-7 col-sm-12 col-xs-12 mt-5 p-5 main-col block">
    <!-- About me heading row -->
    <div class="row pl-3">
        <h1>Contact</h1>
    </div>

    <hr>
    <!-- About me content section -->
    <form>
        <div class="form-group">
            <label>Name</label>
            <input type="name" class="form-control" placeholder="John Smith">
        </div>
        <div class="form-group">
            <label for="exampleInputEmail1">Email</label>
            <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="example@gmail.com">
        </div>
        <div class="form-group">
            <label>Message</label>
            <textarea class="form-control" rows="10"></textarea>
            <br>
            <button type="button" class="btn btn-info btn-lg submit">Submit</button>
        </div>
    </form>

</div>

